<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            >

            <TextView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:text="point"
                android:textColor="@color/white"
                android:gravity="center"
                android:background="@drawable/backgroung_circle"

                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_margin="5dp">

                <TextView
                    android:id="@+id/idtenquananodau"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Ocha House"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/iddiachiodau"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="29, Nguyễn Văn Linh"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    />
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="6,5 km"
                android:gravity="bottom"
                />
        </LinearLayout>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:src="@drawable/ocha"
            android:scaleType="centerCrop"
            />
        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Đặt món"
            android:background="@color/background"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:textSize="20dp"
            android:src="@drawable/ic_local_shipping_white_24dp"
            />

        <LinearLayout
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            >

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:text="point"
                android:textColor="@color/white"
                android:gravity="center"
                android:src="@drawable/check"


                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_margin="5dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Hello"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="29, Nguyễn Văn Linh"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    />
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="6"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:paddingLeft="10dp"
                android:textAlignment="center"
                android:drawablePadding="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10 comment"
                android:drawableLeft="@drawable/ic_insert_comment_black_24dp"
                />
            <TextView
                android:paddingLeft="10dp"
                android:layout_marginLeft="30dp"
                android:textAlignment="center"
                android:drawablePadding="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="20 images"
                android:drawableLeft="@drawable/ic_photo_camera_black_24dp"/>
        </LinearLayout>

            />
    </LinearLayout>
</androidx.cardview.widget.CardView>
